{
  "name": "bare-daemon",
  "version": "1.1.0",
  "description": "Create and manage daemon processes in JavaScript",
  "exports": {
    "./package": "./package.json",
    ".": "./index.js"
  },
  "imports": {
    "#binding": {
      "bare": "./binding/bare.js",
      "node": "./binding/node.js"
    },
    "path": {
      "bare": "bare-path",
      "default": "path"
    },
    "process": {
      "bare": "bare-process",
      "default": "process"
    }
  },
  "files": [
    "index.js",
    "binding.c",
    "binding/bare.js",
    "binding/node.js",
    "CMakeLists.txt",
    "prebuilds"
  ],
  "addon": true,
  "scripts": {
    "test": "npm run lint && npm run test:bare && npm run test:node",
    "test:bare": "bare test.js",
    "test:node": "node test.js",
    "lint": "prettier . --check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/holepunchto/bare-daemon.git"
  },
  "author": "Holepunch",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/holepunchto/bare-daemon/issues"
  },
  "homepage": "https://github.com/holepunchto/bare-daemon#readme",
  "dependencies": {
    "bare-process": "^4.2.1",
    "require-addon": "^1.1.0"
  },
  "devDependencies": {
    "bare-compat-napi": "^1.3.6",
    "bare-fs": "^4.1.2",
    "bare-path": "^3.0.0",
    "brittle": "^3.4.0",
    "cmake-bare": "^1.1.2",
    "cmake-fetch": "^1.4.1",
    "cmake-napi": "^1.2.2",
    "cmake-npm": "^1.1.0",
    "prettier": "^3.3.3",
    "prettier-config-standard": "^7.0.0"
  }
}
